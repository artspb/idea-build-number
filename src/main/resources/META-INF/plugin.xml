<idea-plugin>
    <id>me.artspb.idea.build.number.plugin</id>
    <name>Build Number Status Bar Widget</name>
    <vendor email="contact@artspb.me" url="https://artspb.me">Artem Khvastunov</vendor>

    <description><![CDATA[
        A simple plugin that brings IDEA's build number into a status bar.
    ]]></description>

    <change-notes><![CDATA[
        <h3>0.9</h3>
        <ul>
          <li>Added support for versions from 2018.2 to 2019.3.</li>
        </ul>
    ]]>
    </change-notes>

    <idea-version since-build="182.2757.3"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetProvider implementation="me.artspb.idea.build.number.plugin.BuildNumberStatusWidgetProvider"/>
    </extensions>

</idea-plugin>